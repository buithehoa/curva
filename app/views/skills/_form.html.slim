= form_for @skill do |f|
  - if @skill.errors.any?
    #error_explanation
      h2 = "#{pluralize(@skill.errors.count, "error")} prohibited this skill from being saved:"
      ul
        - @skill.errors.full_messages.each do |message|
          li = message

  div
    = f.label :name
    = f.text_field :name, autofocus: true

  div
    .actions = f.submit 'Save'
